#include <iostream>
#include<stack>
using namespace std;
int main()
{
    int arr[]={6,2,5,4,1,5,6};
    int n=sizeof(arr)/sizeof(arr[0]);
    int res=0;
    for(int i=0;i<n;i++){
        int max=arr[i];
        for(int j=i-1;j>=0;j--){
            if(arr[j]>=arr[i])
            max+=arr[i];
            else
            break;
        }
        for(int k=i+1;k<n ;k++){
            if(arr[k]>=arr[i])
            max+=arr[i];
            else
            break;
        }
        res=max>=res? max:res;
        
    }
    cout<<res<<endl;
    return 0;
}

// output:10
